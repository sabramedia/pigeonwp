{
	"name": "pigeon/pigeonwp",
	"description": "Paywall for WordPress",
	"type": "project",
	"keywords": [],
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"require-dev": {
		"squizlabs/php_codesniffer": "3.*",
		"wp-cli/i18n-command": "2.3.0",
		"wp-cli/wp-cli-bundle": "2.6.0",
		"wp-coding-standards/wpcs": "^3.0.1",
		"brainmaestro/composer-git-hooks": "^2.8"
	},
	"config": {
		"process-timeout": 3000,
		"platform": {
			"php": "7.1"
		}
	},
	"extra": {
		"hooks": {
			"pre-commit": [
				"composer lint"
			]
		}
	},
	"scripts": {
		"clean": ["vendor/bin/phpcbf . --standard=phpcs.xml"],
		"lint": ["vendor/bin/phpcs . --standard=phpcs.xml"],
		"make-pot": "wp i18n make-pot . ./languages/pigeonwp.pot --exclude=admin/js,assets,sdk"
	}
  }
  